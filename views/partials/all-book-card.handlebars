  <div class="col mb-5">
    <div class="card h-100">
      <!-- Product image-->
      <img class="card-img-top h-50" src={{image_url}}  />
      <!-- Product details-->
      <div class="card-body p-3">
        <div class="text-center">
          <!-- Product name-->
          <h5 class="fw-bolder">{{book_name}}</h5>
          <!-- Product price-->
          <h6 class="fw-bolder">{{price}}</h6>
        </div>
      </div>
      <!-- Product actions-->
      <div class="card-footer p-3 pt-0 border-top-0 bg-transparent">
        <div class="text-center">
          <a
            class="btn btn-outline-dark mt-auto"
            href="/book/{{id}}"
          >Description and Reviews</a>
          <button type="button" class="btn btn-warning m-3">Add to Cart</button>
        </div>
      </div>
    </div>
  </div>
