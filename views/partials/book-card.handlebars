{{#each this}}
  <div class="col mb-5">
    <div class="card h-100" style="max-width: 325px">
      <!-- Product image-->
      <img class="card-img-top h-50" src={{image_url}} alt={{book_name}} />
      <!-- Product details-->
      <div
        class="card-body text-center p-3 d-flex flex-column justify-content-around"
      >
        <!-- Product name-->
        <h5 class="fw-bolder card-title">{{book_name}}</h5>
        <!-- Product price-->
        <p class="card-text">{{price}}</p>

      </div>
      <!-- Product actions-->
      <div class="card-footer text-center p-3">
        <a class="btn btn-outline-dark mt-auto" href="/book/{{id}}">Description
          and Reviews</a>
        <button type="button" class="btn btn-warning mt-3">Add to Cart</button>
      </div>
    </div>
  </div>
{{/each}}