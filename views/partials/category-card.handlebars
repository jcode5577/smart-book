<div class="col mb-5">
  <div class="card h-100" style="max-width: 325px">
    <!-- Product image-->
    <img
      class="card-img-top h-50"
      src={{category_image}}
      alt={{category_name}}
    />
    <!-- Product details-->
    <div
      class="card-body text-center p-3 d-flex flex-column justify-content-around"
    >

      <!-- Product name-->
      <h5 class="fw-bolder card-title">{{category_name}}</h5>
      <!-- Product price-->
    </div>
    <!-- Product actions-->
    <div class="card-footer text-center p-3">
      <a class="btn btn-outline-dark mt-auto" href="/category/{{id}}">View Books
        in
        {{category_name}}</a>
    </div>
  </div>
</div>